<script>
function showResult(){
    let score = 0;
    let total = 5;

    for(let i=1;i<=total;i++){
        let ans = document.querySelector('input[name="q'+i+'"]:checked');
        if(!ans){
            alert("Complete all levels to unlock result");
            return;
        }
        score += parseInt(ans.value);
        document.getElementById("progressBar").style.width = (i/total)*100 + "%";
    }

    let res = document.getElementById("result");
    res.style.display = "block";

    if(score <= 7){
        res.style.background="#7f1d1d";
        res.innerHTML = `
        <div class="level">ğŸŸ¥ Growth Level: Survival Mode</div>
        <p>You are running your photography business on luck & referrals.</p>
        <p>ğŸ“‰ Missed Opportunity: Consistent premium enquiries</p>
        <p>Top studios never depend only on referrals.</p>
        `;
    } 
    else if(score <= 11){
        res.style.background="#78350f";
        res.innerHTML = `
        <div class="level">ğŸŸ¨ Growth Level: Struggling Scale</div>
        <p>You are doing many things right, but without a system.</p>
        <p>âš ï¸ Missed Opportunity: Follow-ups, ad funnels & lead quality</p>
        <p>This is where most photographers get stuck.</p>
        `;
    } 
    else{
        res.style.background="#14532d";
        res.innerHTML = `
        <div class="level">ğŸŸ© Growth Level: Scale Ready</div>
        <p>You have a solid foundation.</p>
        <p>ğŸš€ Next unlock: Automation, premium positioning & ROI ads</p>
        <p>Few photographers reach this stage.</p>
        `;
    }
}
</script>

